{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/../src/$1",
    "^@users/(.*)$": "<rootDir>/../src/users/$1",
    "^@database/(.*)$": "<rootDir>/../src/database/$1",
    "^@test/(.*)$": "<rootDir>/$1",
    "^@config/(.*)$": "<rootDir>/../src/config/$1",
    "^@home/(.*)$": "<rootDir>/../src/home/$1"
  }
}